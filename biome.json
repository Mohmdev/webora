{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": false },
    "ignore": ["apps/**", "packages/**"]
  },
  "javascript": {
    "formatter": { "trailingCommas": "es5", "semicolons": "asNeeded", "quoteStyle": "double" }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": false,
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "multiline"
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/payload-types.ts",
      "**/.tmp",
      "**/.git",
      "**/.hg",
      "**/.pnp.*",
      "**/.svn",
      "**/.yarn/**",
      "**/build",
      "**/dist/**",
      "**/node_modules",
      "src/services/database/migrations/**/*",
      "src/app/(payload)/**/*",
      "**/pnpm-lock.yaml",
      "**/package-lock.json"
    ]
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "json": { "parser": { "allowComments": true } }
}
