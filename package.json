{
  "name": "webora",
  "version": "v1.0.0-beta.1",
  "private": true,
  "author": "Mohmdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohmdev/webora"
  },
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "ci": "bun install --frozen-lockfile",
    "update-deps": "rm node_modules bun.lock -rf && bun i",
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "turbo biome:lint",
    "biome:lint": "biome lint --write .",
    "dev:web": "bun --bun run turbo dev --filter=web || (echo 'Shutting down...' && exit 0)"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@workspace/biome-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "bun@1.2.5",
  "engines": {
    "node": ">=22"
  },
  "trustedDependencies": ["@biomejs/biome", "core-js-pure", "sharp"]
}
